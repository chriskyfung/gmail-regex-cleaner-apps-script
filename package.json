{
  "name": "gmail-regex-cleaner-apps-script",
  "version": "0.2.2",
  "private": true,
  "description": "A Google Apps Script that helps you delete Gmail messages older than n days that match your custom regex filters.",
  "scripts": {
    "build": "npm run clean && node scripts/build.mjs && npm run update-timezone",
    "clean": "rimraf dist",
    "update-timezone": "node scripts/update-timezone.mjs",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write 'src/**/*.js'",
    "login": "clasp login",
    "logout": "clasp logout",
    "pull": "clasp pull",
    "push": "clasp push",
    "push:watch": "clasp push -w",
    "status": "clasp status",
    "open": "clasp open",
    "deployments": "clasp deployments",
    "versions": "clasp versions",
    "logs": "clasp logs",
    "test": "jest",
    "validate": "npm run lint && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chriskyfung/gmail-regex-cleaner-apps-script.git"
  },
  "keywords": [
    "google-apps-script",
    "gmail",
    "mail-filter",
    "mail-remove"
  ],
  "author": "Chris K.Y. FUNG (https://chriskyfung.github.io/)",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/chriskyfung/gmail-regex-cleaner-apps-script/issues"
  },
  "homepage": "https://github.com/chriskyfung/gmail-regex-cleaner-apps-script#readme",
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/chriskyfung"
    },
    {
      "type": "buymeacoffee",
      "url": "https://www.buymeacoffee.com/chrisfungky"
    }
  ],
  "config": {
    "examples": {
      "exclude": []
    }
  },
  "engines": {
    "node": ">=18.18.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@eslint/js": "^9.33.0",
    "@google/clasp": "^2.5.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@types/google-apps-script": "^1.0.100",
    "@types/jest": "^30.0.0",
    "@types/sanitize-html": "^2.16.0",
    "babel-jest": "^30.0.5",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-googleappsscript": "^1.0.5",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.48.1"
  },
  "dependencies": {
    "sanitize-html": "^2.17.0"
  }
}
